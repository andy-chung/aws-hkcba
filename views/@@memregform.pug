extends layout.pug

block content
    .container
      .row
        .col-lg-8.col-md-10.mx-auto
          form(action='', method='post')
            .form-group
              label(for='inputUsername') Username:
              input#inputUsername.form-control(type='textbox', name='inputUsername', aria-describedby='usernameHelp', placeholder='')
              small#usernameHelp.form-text.text-muted Alphanumeric no space.
              label(for='inputPassword') Password:
              input#inputPassword.form-control(type='password', name='inputPassword', aria-describedby='passwordHelp', placeholder='')
              small#passwordHelp.form-text.text-muted Alphanumeric no space.
              label(for='inputMembername') Member name:
              input#inputMembername.form-control(type='textbox', name='inputMembername', aria-describedby='membernameHelp', placeholder='')
              small#membernameHelp.form-text.text-muted Your real name.
            br
            button.btn.btn-primary(type='submit') Submit

          if errors 
            ul
              for error in errors
                li!= error.msg
