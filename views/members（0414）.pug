extends layout.pug

block content
    .container
      .row
        .col-lg-8.col-md-10.mx-auto
          p
            i.fas.fa-user.fa-2x
            |  
            | #{playername}
          ul
          li 
            a.bluelink(href='/profile') View or update profile 
          li 
            a.bluelink(href='/logout') Logout 
          p Pre-registration 
          ul
          each mrlink in mrlink_list
            li 
              a.yellowlink(href=mrlink.Reglink) #{mrlink.Game} 
              | (#{mrlink.Tdate.toDateString()} #{mrlink.Tdate.toLocaleTimeString()})
          p Masterpoints history 
          table
            tr
              th Cat
              th Points
              th Event
              th Date
            each masterp in masterp_list
              tr
                td #{masterp.Category}
                td #{masterp.Points}
                td #{masterp.Game}
                td #{masterp.Tdate.toDateString()}
            hr
