    link(href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800', rel='stylesheet', type='text/css')
    // Custom styles for this template
    // link href="css/clean-blog.min.css" rel="stylesheet"
    link(href='/stylesheets/clean-blog-page.css', rel='stylesheet')
    link(rel='stylesheet', href='/stylesheets/minimal-table.css')
    link(rel='stylesheet', href='/stylesheets/login.css')
    title HKCBA
  body
    // Navigation
    // nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav"
    // nav class="navbar navbar-expand-lg navbar-light bg-dark fixed-top is-visible is-fixed" id="mainNav"
    nav#mainNav.navbar.navbar-expand-lg.navbar-light.bg-light.fixed-top.is-visible.is-fixed
      .container
        a.navbar-brand(href='/') HKCBA
        button.navbar-toggler.navbar-toggler-right(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
          | Menu
          i.fas.fa-bars
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link(href='/calendar') Calendar
            li.nav-item
              a.nav-link(href='https://www.bridgewebs.com/hkcba/') Results
            li.nav-item
              a.nav-link(href='/newsletters') Newsletters
            li.nav-item
              a.nav-link(href='/login') Members
    // Page Header
    // Main Content
    // This snippet uses Font Awesome 5 Free as a dependency. You can download it at fontawesome.io!
    .container
      .row
        .col-sm-9.col-md-7.col-lg-5.mx-auto
          .card.card-signin.my-5
            .card-body
              h5.card-title.text-center Sign In
              form.form-signin(action='', method='post')
                .form-label-group
                  input#inputEmail.form-control(name='inputEmail', type='email', placeholder='Email address', required='', autofocus='')
                  //label(for='inputEmail') Email address
                  label(for='inputEmail') 
                .form-label-group
                  input#inputPassword.form-control(type='password', placeholder='Password', required='')
                  //label(for='inputPassword') Password
                  label(for='inputPassword') 
                .custom-control.custom-checkbox.mb-3
                  input#customCheck1.custom-control-input(type='checkbox')
                  label.custom-control-label(for='customCheck1') Remember password
                button.btn.btn-lg.btn-primary.btn-block.text-uppercase(type='submit') Sign in
                hr.my-4
                button.btn.btn-lg.btn-google.btn-block.text-uppercase(type='submit')
                  i.fab.fa-google.mr-2
                  |  Sign in with Google
                button.btn.btn-lg.btn-facebook.btn-block.text-uppercase(type='submit')
                  i.fab.fa-facebook-f.mr-2
                  |  Sign in with Facebook
    // Optional JavaScript
    // jQuery first, then Popper.js, then Bootstrap JS
    script(src='https://code.jquery.com/jquery-3.4.1.slim.min.js', integrity='sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n', crossorigin='anonymous')
